<style>
/* Footer */
footer {
    background: var(--main-blue);
    color: var(--off-white);
    padding: 5vh;
    text-align: center;
    position: relative;
}

footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><filter id="noise"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" stitchTiles="stitch"/><feColorMatrix type="saturate" values="0"/></filter><rect width="100" height="100" filter="url(%23noise)" opacity="0.15"/></svg>');
    opacity: 0.4;
    z-index: 1;
}

footer > * {
    position: relative;
    z-index: 2;
}

footer h3 {
    font-size: 42px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.footer-buttons {
    display: flex;
    gap: 25px;
    justify-content: center;
    margin: 2vh;
}

.btn-footer {
    padding: 1vh 4vh;
    font-size: 20px;
    font-weight: 800;
    border: 4px solid var(--bg-orange);
    background: transparent;
    color: var(--bg-orange);
    cursor: pointer;
    transition: all 0.3s;
    text-decoration: none;
    display: inline-block;
    letter-spacing: 1px;
}

.btn-footer:hover {
    background: var(--bg-orange);
    color: var(--main-blue);
}

.footer-social {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin: 10px;
}

.footer-social a {
    color: var(--off-white);
    font-size: 24px;
}

@media (max-width: 768px) {
    footer {
        /* Increase padding slightly on top/bottom for better visual separation */
        padding: 6vh 20px;
    }

    footer h3 {
        /* Decrease font size for mobile header */
        font-size: 32px;
    }

    .footer-buttons {
        /* Change to column layout to stack buttons vertically */
        flex-direction: column;
        gap: 15px;
        margin: 3vh auto;
        /* Constrain button group width */
        max-width: 300px;
    }

    .btn-footer {
        /* Adjust padding and font size for better mobile tap target */
        padding: 15px 3vh; /* Increased vertical padding */
        font-size: 18px;
        width: 100%; /* Make buttons full width of the container (max-width: 300px) */
    }

    .footer-legal-block p {
        /* Adjust font size for legal text */
        font-size: 14px;
    }

    .paid-for {
        /* Ensure paid-for text is legible */
        font-size: 12px;
    }

    .footer-social {
        /* Keep the same icon size or slightly decrease if needed */
        gap: 15px;
        margin-top: 15px;
    }
    
    .footer-social a {
        font-size: 22px;
    }

    .copyright {
        font-size: 12px;
        margin-top: 15px;
    }
}

/* Additional adjustment for very small screens (e.g., iPhone 5/SE) */
@media (max-width: 480px) {
    footer h3 {
        font-size: 28px;
    }
    
    .footer-buttons {
        max-width: 250px;
    }
}
</style>