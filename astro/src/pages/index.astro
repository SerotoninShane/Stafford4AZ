---
// Import the layout
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoThumbnail from '../components/VideoThumbnail.astro';
import VideoModal from '../components/VideoModal.astro';
// Define the unique data for this specific page
const pageTitle = "Eric Stafford's Platform | Putting Arizonans First";
const pageUrl = '/';
const pageDescription = "View Eric Stafford's detailed platform on education, water, and economic development for Arizona.";
---

<BaseLayout 
    title={pageTitle} 
    canonicalUrl={pageUrl} 
    description={pageDescription}
>


<!-- Hero Section -->
<section class="hero" id="home">
    <div class="hero-content-wrapper">
        <div class="hero-text-and-buttons">
            <h1>
                Eric Stafford: Arizonans First. Arizona Always.
            </h1>
            <div class="hero-buttons">
                <a href="https://secure.actblue.com/donate/stafford-4-az-1" class="btn" target="_blank">DONATE</a>
                <a href="#volunteer" class="btn">VOLUNTEER</a>
            </div>
        </div>
        <div class="hero-headshot-container">
            <img src="/assets/eric.webp" alt="Eric Stafford Headshot" width="600" height="400" loading="eager">
        </div>
    </div>
</section>

<!-- About / Signup Section -->
<section class="about-section" id="contact">
    <div class="about-image"> 
        <h2>Stay Up to Date on the Campaign</h2>
        <p class="disclaimer-large">
            By submitting your phone number you are agreeing to receive up to 2 text message(s) per day from Eric Stafford for Arizona Senate. Eric Stafford for Arizona Senateâ€™s mobile campaigns provide subscribers with updates, event invitations, donation asks, and voting reminders. Messages may include donation asks. Message and data rates may apply. Text HELP for more information. Text STOP to stop receiving messages. See Terms of Service/Privacy Policy.
        </p>
    </div>
    
    <div class="about-content">
        <form class="campaign-form">
            <input type="hidden" name="form-name" value="campaign-signup">

            <div class="form-row">
                <div class="form-group">
                    <label for="first-name">First Name (required)</label>
                    <input type="text" id="first-name" name="first-name" required>
                </div>
                <div class="form-group">
                    <label for="last-name">Last Name (required)</label>
                    <input type="text" id="last-name" name="last-name" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="zip-code">Zip Code (required)</label>
                    <input type="text" id="zip-code" name="zip-code" pattern="\d{5}" required>
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="tel" id="phone" name="phone">
                </div>
            </div>

            <div class="form-group full-width">
                <label for="email">Email (required)</label>
                <input type="email" id="email" name="email" required>
            </div>
            
            <button type="submit" class="btn submit-btn">Submit</button>
        </form>
    </div>
</section>

<!-- Video Section -->
<section class="video-section" id="video">
    <div class="video-content-wrapper">
        <div class="video-text">
            <h2>See Eric's Vision for Arizona</h2>
            <p>See Eric Stafford share his vision for Arizona and how he plans to put Arizonans first. Hear directly from him about affordable healthcare, strong schools, fair labor, and sustainable water policies. Watch the video to learn how his results-driven leadership can create a brighter future for all Arizonans.</p>
        </div>
    </div>
    <VideoThumbnail client:load/>
</section>

<!-- Video Modal -->
<VideoModal client:load/>

</div>

<!-- Donate Section -->
<section class="donate-section">
    <h2>
        DONATE TO<br>
        Eric Stafford<br>
        for Senate
    </h2>
    <div class="donate-amounts">
        <a href="https://apps.azsos.gov/apps/election/eps/qc/" target="_blank">
        <button class="donate-amount-btn" data-amount="5">$5</button>
        </a>
        <a href="https://secure.actblue.com/donate/stafford-4-az-1" target="_blank">
        <button class="donate-amount-btn" data-amount="10">$10</button>
        </a>
        <a href="https://secure.actblue.com/donate/stafford-4-az-1" target="_blank">
        <button class="donate-amount-btn" data-amount="25">$25</button>
        </a>
        <a href="https://secure.actblue.com/donate/stafford-4-az-1" target="_blank">
        <button class="donate-amount-btn" data-amount="50">$50</button>
        </a>
        <a href="https://secure.actblue.com/donate/stafford-4-az-1" target="_blank">
        <button class="donate-amount-btn" data-amount="100">$100</button>
        </a>
        <a href="https://secure.actblue.com/donate/stafford-4-az-1" target="_blank">
        <button class="donate-amount-btn other" data-amount="other">OTHER</button>
        </a>
    </div>
</section>

<!-- Platform Section -->
<section class="platform-section" id="platform">
    <div class="platform-image-container">
        <img src="/assets/vote.webp" alt="Eric Stafford State Senator Candidate Holding Vote Hat">
    </div>
    <div class="platform-content-wrapper">
        <div class="platform-text">
            <h2>Where I Stand</h2>
            <p>
                Arizona is becoming unaffordable for thousands and thousands of us. Why? Because we have a government by, of, and for billionaires, building a "billionaire economy" that none of us can afford. I'm not just running against the establishment: I'm running against the billionaire class that owns them and owns Washington.
            </p>
        </div>
    </div>
</section>
</BaseLayout>